<view class="container">
  <view class="weather-card">
    <view class="today">
      <view class="top">
        <view class="range">16°-25°</view>
        <view class="refresh">
          <image src="src"></image>
        </view>
      </view>
      <view class="middle">
        <image src="src"></image>
      </view>
      <view class="bottom">
        <view class="temp"></view>
        <view class="city-day">
          <view class="day"></view>
          <view class="city"></view>
        </view>
      </view>
    </view>
    <view class="other"></view>
  </view>
</view>
